<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ObjectiveAdmin">

<ImageButton
        android:id="@+id/BaranggayBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/backbtn"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/localink"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/localink_logo" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/titleofactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/volunteerwork"
        android:text="Title of Activity"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/br"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/border_text" />

    <TextView
        android:id="@+id/volunteerwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="200dp"
        android:text="Volunteer Work"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/ongoing_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="68dp"
        android:layout_centerHorizontal="true"
        android:text="Volunteer"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/br2"
        android:layout_width="360dp"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/br"
        android:background="@drawable/border_text" />


    <TextView
        android:id="@+id/Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="200dp"
        android:text="Details"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/Duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="200dp"
        android:text="Duration"
        android:layout_below="@id/Details"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/validtil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="200dp"
        android:text="Valid until when"
        android:textSize="13sp"
        android:inputType="text"
        android:textColor="#929292"
        android:layout_below="@id/Duration" />




    <TextView
        android:id="@+id/Instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="200dp"
        android:text="Instructions"
        android:layout_below="@id/validtil"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/Instructions_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="200dp"
        android:text="Type your instructions here.."
        android:textSize="13sp"
        android:inputType="text"
        android:textColor="#929292"
        android:layout_below="@id/Instructions" />

    <TextView
        android:id="@+id/Note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="200dp"
        android:text="Note"
        android:textColor="#929292"
        android:layout_below="@id/Instructions_input"
        android:textStyle="bold|italic"/>

    <EditText
        android:id="@+id/Note_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="200dp"
        android:text="Type your instructions here.."
        android:textSize="13sp"
        android:inputType="text"
        android:textStyle="italic"
        android:textColor="#929292"
        android:layout_below="@id/Note" />

    <TextView
        android:id="@+id/br3"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/br2"
        android:background="@drawable/border_text" />

    <TextView
        android:id="@+id/confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:text="Do you want to save this?"
        android:layout_below="@+id/br2"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/VolunteerBtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3BA863"
        android:minWidth="200dp"
        android:minHeight="48dp"
        android:padding="10dp"
        android:text="Yes"
        android:textColor="@android:color/black"
        android:layout_below="@+id/br3"
        android:textSize="14dp" />

    <Button
        android:id="@+id/HiringBtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:backgroundTint="@color/black"
        android:minWidth="200dp"
        android:minHeight="48dp"
        android:padding="10dp"
        android:text="No"
        android:textColor="@android:color/white"
        android:layout_below="@+id/br3"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/chatsupport"
        android:layout_width="49dp"
        android:layout_height="46dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/customersupport"  />




</RelativeLayout>
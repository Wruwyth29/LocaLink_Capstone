<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="430dp"
        android:layout_height="455dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/localink__1__removebg_preview" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="210dp"
        android:fontFamily="@font/adlam_display"
        android:text="Sign In"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="80dp"
        android:text="Enter your email to sign in for this app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <Button
        android:id="@+id/buttonEmployer"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/button1"
        android:text="Employer"
        app:layout_constraintEnd_toStartOf="@+id/buttonWorker"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonWorker"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/button2"
        android:text="Worker"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EmailAddress"
        android:layout_width="140pt"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_text"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:text="Email"
        android:textColor="#828282"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEmployer" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="140pt"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_text"
        android:fontFamily="@font/alata"
        android:paddingLeft="10dp"
        android:text="Password"
        android:textColor="#828282"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailAddress" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="355dp"
        android:layout_height="40dp"
        android:layout_marginBottom="240dp"
        android:background="@drawable/button2"
        android:text="Log In"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Jointxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Don't have an account yet? Join us now!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginbtn" />

    <Button
        android:id="@+id/signinbtn"
        android:layout_width="70pt"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button1"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Jointxt" />


</androidx.constraintlayout.widget.ConstraintLayout>
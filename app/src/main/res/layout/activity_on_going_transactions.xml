<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnGoingTransactions">

    <ImageButton
        android:id="@+id/OnGoingTransaction_BackBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/backbtn"/>

    <ImageView
        android:id="@+id/Logo_BaranggayPage"
        android:layout_width="238dp"
        android:layout_height="208dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/localink__1__removebg_preview" />

    <TextView
        android:id="@+id/OnGoingTransaction"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="100dp"
        android:text="On-Going Transaction"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="246dp"
        android:layout_height="114dp"
        android:layout_below="@id/OnGoingTransaction"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/border_text" />

    <Button
        android:id="@+id/UserProfile_OnGoingTransactions"
        android:layout_width="248dp"
        android:layout_height="276dp"
        android:layout_below="@id/OnGoingTransaction"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="-58dp"
        android:background="@drawable/userprofile"/>

    <ImageView
        android:id="@+id/Imageview8"
        android:layout_width="368dp"
        android:layout_height="450dp"
        android:layout_below="@id/UserProfile_OnGoingTransactions"
        android:layout_centerInParent="true"
        android:layout_marginTop="-50dp"
        android:background="@drawable/border_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button1"
        android:layout_below="@id/Imageview8"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="Confirm"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="58dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_below="@id/Imageview8"
        android:layout_marginTop="50dp"
        android:background="@drawable/customer_support_removebg_preview" />


</RelativeLayout>
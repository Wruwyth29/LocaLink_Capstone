<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_up_fifth">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="238dp"
        android:layout_height="306dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/localink__1__removebg_preview" />

    <TextView
        android:id="@+id/SignUp_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_below="@+id/Logo"
        android:layout_marginTop="-150dp"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose what type of account you want to create."
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/alata"
        android:layout_below="@id/SignUp_Tv"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/Step1_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/SignUp_Tv"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/green_circle"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/Step2_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/SignUp_Tv"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/Step1_img"
        android:background="@drawable/green_circle"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/Step3_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/SignUp_Tv"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/Step2_img"
        android:background="@drawable/green_circle"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/Step4_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/SignUp_Tv"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/Step3_img"
        android:background="@drawable/green_circle"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/Step5_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/SignUp_Tv"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/Step4_img"
        android:background="@drawable/black_circle"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Required Documents"
        android:fontFamily="@font/adlam_display"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_below="@id/Step1_img"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/SignUp5_NBIClearance"
        android:layout_width="105dp"
        android:layout_height="109dp"
        android:layout_below="@id/Step1_img"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/button1" />

    <Button
        android:id="@+id/SignUp5_Residency"
        android:layout_width="105dp"
        android:layout_height="109dp"
        android:layout_below="@id/Step1_img"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/button1" />

    <Button
        android:id="@+id/SignUp5_ValidID"
        android:layout_width="105dp"
        android:layout_height="109dp"
        android:layout_below="@id/Step1_img"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="325dp"
        android:background="@drawable/button1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NBI Clearance"
        android:fontFamily="@font/adlam_display"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_below="@id/Step4_img"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@id/SignUp5_NBIClearance"
        android:layout_marginTop="120dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proof of Residency"
        android:fontFamily="@font/adlam_display"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_below="@id/Step4_img"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@id/SignUp5_Residency"
        android:layout_marginTop="245dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valid ID"
        android:fontFamily="@font/adlam_display"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_below="@id/Step4_img"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@id/SignUp5_ValidID"
        android:layout_marginTop="370dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button1"
        android:outlineAmbientShadowColor="@color/black"
        android:text="Type of Document"
        android:fontFamily="@font/adlam_display"
        android:layout_below="@id/SignUp5_ValidID"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="65dp"
        android:layout_toRightOf="@id/SignUp5_ValidID"
        />

    <Button
        android:id="@+id/Confirm_SignUp5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button1"
        android:layout_below="@id/SignUp5_ValidID"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        android:text="Confirm"/>

    <Button
        android:id="@+id/Cancel_SignUp5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button2"
        android:layout_below="@id/SignUp5_ValidID"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/Confirm_SignUp5"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:text="Confirm"/>
    





</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminsView_BarangayHiring">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/localink_logo" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="36dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/backbtn2" />

    <ImageView
        android:id="@+id/notification"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="80dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/bell" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="49dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/ongoing_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="68dp"
        android:layout_centerHorizontal="true"
        android:text="Hiring"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/VolunteerBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@android:color/black"
        android:minWidth="200dp"
        android:minHeight="48dp"
        android:padding="10dp"
        android:text="Volunteer"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

    <Button
        android:id="@+id/HiringBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:backgroundTint="#3BA863"
        android:minWidth="200dp"
        android:minHeight="48dp"
        android:padding="10dp"
        android:text="Hiring"
        android:textColor="@android:color/black"
        android:textSize="14dp" />


    <ScrollView
        android:id="@+id/ApplicantsScrollView"
        android:layout_width="370dp"
        android:layout_height="220dp"
        android:layout_below="@id/HiringBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="19dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="370dp"
                android:layout_height="110dp"
                android:background="@drawable/border_text">

                <TextView
                    android:id="@+id/applicants"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:text="Applicants"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/user2" />

                <TextView
                    android:id="@+id/gigwork_online"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@id/applicants"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="25dp"
                    android:text="Online"
                    android:textColor="#929292"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/gigwork_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@id/gigwork_online"
                    android:layout_marginStart="100dp"
                    android:text="Micko Sapinoso"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/gigwork_work"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@id/gigwork_name"
                    android:layout_marginStart="100dp"
                    android:text="Collect Plastic Bottles"
                    android:textColor="#929292"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="370dp"
                android:layout_height="106dp"
                android:background="@drawable/border_text">


                <ImageView
                    android:id="@+id/user2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/user2" />

                <TextView
                    android:id="@+id/gigwork_online2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="25dp"
                    android:text="Online"
                    android:textColor="#929292"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/gigwork_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@id/gigwork_online2"
                    android:layout_marginStart="100dp"
                    android:text="Micko Sapinoso"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/gigwork_work2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@id/gigwork_name2"
                    android:layout_marginStart="100dp"
                    android:text="Collect Plastic Bottles"
                    android:textColor="#929292"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/contracts"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/ApplicantsScrollView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="21dp"
        android:text="On-Going Contract"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/br5"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="21dp"
        android:background="@drawable/border_text"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@+id/contract"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/contract_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/contract"
        android:layout_marginTop="20dp"
        android:layout_marginStart="35dp"
        android:text="On-Going Contract"
        android:textColor="#929292"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contract_date"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/contract_name"
        android:layout_marginStart="35dp"
        android:text="Date and Time: N/A"
        android:textColor="#929292"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contract"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/ApplicantsScrollView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="21dp"
        android:text="On-Going Contract"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/availcontracts"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/br5"
        android:layout_marginTop="20dp"
        android:layout_marginStart="21dp"
        android:text="Available Contracts"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/br6"
        android:layout_width="310dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="21dp"
        android:background="@drawable/border_text"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@+id/availcontracts"
        android:padding="8dp"/>

    <Button
        android:id="@+id/Plus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/plus"
        android:layout_below="@id/availcontracts"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true"
    />


    <TextView
        android:id="@+id/availcontract_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/availcontracts"
        android:layout_marginTop="20dp"
        android:layout_marginStart="35dp"
        android:text="Street Sweeping"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/availcontract_slots"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/availcontract_name"
        android:layout_marginStart="35dp"
        android:text="Open Slots: 5/5"
        android:textColor="#929292"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/availcontract_edit"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/availcontract_slots"
        android:layout_marginStart="35dp"
        android:text="Edit Details"
        android:textColor="#929292"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pendingapplicants"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/br6"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"
        android:text="Pending Applicants"
        android:textSize="15dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/pending"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/br5"
        android:layout_marginTop="20dp"
        android:layout_marginStart="21dp"
        android:text="Available Contracts"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/br7"
        android:layout_width="370dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="21dp"
        android:background="@drawable/border_text"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@+id/pendingapplicants"
        android:padding="8dp"/>



    <ImageView
        android:id="@id/user"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/user2"
        android:layout_below="@id/pendingapplicants"
        android:layout_marginTop="20dp"
        android:layout_marginStart="35dp"
        />

    <TextView
        android:id="@+id/pendingapplicants_status"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/pendingapplicants"
        android:layout_marginTop="20dp"
        android:layout_marginStart="120dp"
        android:text="Online"
        android:textColor="#929292"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pendingapplicants_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/pendingapplicants_status"
        android:layout_marginStart="120dp"
        android:text="Kyle Gabag"
        android:textSize="15dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/pendingapplicants_job"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/pendingapplicants_name"
        android:layout_marginStart="120dp"
        android:text="Street Sweping"
        android:textColor="#929292"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/chatsupport"
        android:layout_width="49dp"
        android:layout_height="46dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/customersupport"  />

    <TextView
        android:id="@+id/pendingapplicants_seemore"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/pendingapplicants"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:text="See more"
        android:textColor="#929292"
        android:textSize="15dp" />


</RelativeLayout>
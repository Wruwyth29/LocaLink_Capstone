<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".privacy_settings_worker">

    <ImageView
        android:id="@+id/PrivacySettingsWorker_Logo"
        android:layout_width="238dp"
        android:layout_height="306dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/localink__1__removebg_preview" />

    <TextView
        android:id="@+id/PrivacySettingsWorker_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_below="@+id/PrivacySettingsWorker_Logo"
        android:layout_marginTop="-150dp"
        android:text="Worker Account"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/PrivacySettingsWorker_NotificationBell"
        android:layout_width="83dp"
        android:layout_height="79dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="55dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/notificationbell"
        />

    <Button
        android:id="@+id/PrivacySettingsWorker_UserProfileBtn"
        android:layout_width="103dp"
        android:layout_height="102dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-15dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/userprofile"
        />

    <EditText
        android:id="@+id/PrivacySettingsWorker_EmailAddress"
        android:layout_width="140pt"
        android:layout_height="40dp"
        android:background="@drawable/border_text"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:text="Email"
        android:textColor="#828282"
        android:textStyle="italic"
        android:layout_below="@+id/PrivacySettingsWorker_Logo"
        android:layout_marginTop="-60dp"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:fontFamily="@font/adlam_display"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@id/PrivacySettingsWorker_Logo"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-100dp"/>

    <EditText
        android:id="@+id/PrivacySettingsWorker_Password"
        android:layout_width="140pt"
        android:layout_height="40dp"
        android:background="@drawable/border_text"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:text="Email"
        android:textColor="#828282"
        android:textStyle="italic"
        android:layout_below="@+id/PrivacySettingsWorker_EmailAddress"
        android:layout_marginTop="70dp"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:fontFamily="@font/adlam_display"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@id/PrivacySettingsWorker_EmailAddress"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/PrivacySettingsWorker_ConfirmPassword"
        android:layout_width="140pt"
        android:layout_height="40dp"
        android:background="@drawable/border_text"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:text="Email"
        android:textColor="#828282"
        android:textStyle="italic"
        android:layout_below="@+id/PrivacySettingsWorker_Password"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:fontFamily="@font/adlam_display"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_below="@id/PrivacySettingsWorker_Password"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/PrivacySettingsWorker_PhoneNumber"
        android:layout_width="140pt"
        android:layout_height="40dp"
        android:background="@drawable/border_text"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:paddingLeft="10dp"
        android:text="Number"
        android:textColor="#828282"
        android:textStyle="italic"
        android:layout_below="@+id/PrivacySettingsWorker_ConfirmPassword"
        android:layout_marginTop="70dp"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:fontFamily="@font/adlam_display"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@id/PrivacySettingsWorker_ConfirmPassword"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/PrivacySettingsWorker_BlockedUsers"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button1"
        android:layout_below="@id/PrivacySettingsWorker_PhoneNumber"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="50dp"
        android:text="View Blocked Users"
        android:textColor="@color/white"
        android:fontFamily="@font/adlam_display"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blocked Users"
        android:fontFamily="@font/adlam_display"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@id/PrivacySettingsWorker_PhoneNumber"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/Edit_PrivacySettingsWorker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button1"
        android:layout_below="@id/PrivacySettingsWorker_BlockedUsers"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        android:text="Edit"/>

    <Button
        android:id="@+id/Back_PrivacySettingsWorker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button2"
        android:layout_below="@id/PrivacySettingsWorker_BlockedUsers"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/Edit_PrivacySettingsWorker"
        android:textColor="@color/white"
        android:text="Back"/>

</RelativeLayout>